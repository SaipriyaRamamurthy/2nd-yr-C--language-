#include <stdio.h>
void main()
{
    int a;
    int sum = 0;

    printf("Enter numbers to sum (enter 0 to finish):\n");

    while (1)
        {
        printf("Enter a number: ");
        scanf("%d", &a);

        if (a == 0)
        {
            break;
        }

        sum = sum+a ;
    }

    printf("The total sum is: %d\n", sum);

    return 0;
}
