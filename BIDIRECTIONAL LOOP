#include <stdio.h>

void main()
{
    int i;
    printf("Forward loop:\n");
    for (i = 0; i < 5; i++)
        {
        printf("%d ", i);
    }

    printf("\n");

    printf("Backward loop:\n");
    for (i = 4; i >= 0; i--)
        {
        printf("%d ", i);
    }

    printf("\n");

    return 0;
}
